{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "declaration": true,
    "emitDeclarationOnly": true,
    "types": ["jest", "node"],
    "skipLibCheck": true
  }
}
